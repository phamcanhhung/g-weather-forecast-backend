<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>G-Weather-Forecast</title>
    <link
      href="style.css"
      rel="stylesheet"
    />
  </head>
  <body class="text-white">
    <main class="container p-5">
      <section class="d-flex flex-column gap-3">
        <div
          class="p-3 bg-primary d-flex flex-row justify-content-between rounded-1"
        >
          <div>
            <h4 style="font-weight: 600">{{name}}({{localtime}})</h4>
            <p>Temperature: {{temp}}&deg;C</p>
            <p>Wind: {{wind}}&nbsp;M/S</p>
            <p>Humidity: {{humid}}%</p>
          </div>
          <div
            class="condition d-flex flex-column justify-content-center align-items-center me-4"
          >
            <img
              id="condition-icon"
              src="{{icon}}"
              alt="{{text}}"
              width="100px"
              height="100px"
            />
            <p class="text-center">{{text}}</p>
          </div>
        </div>
        <h4 style="font-weight: 600" class="text-black">4-Day Forecast</h4>
        <div class="row g-3">
          {{#each forecasts}} {{#with this}}
          <div class="col-3">
            <div class="bg-secondary rounded-1 p-3">
              <p class="fw-bold">({{this.date}})</p>
              <img
                src="{{this.icon}}"
                alt="{{this.text}}"
                width="50px"
                height="50px"
              />
              <p>Temp: {{this.temp}}&deg;C</p>
              <p>Wind: {{this.wind}}&nbsp;M/S</p>
              <p>Humidity: {{this.humid}}%</p>
            </div>
          </div>
          {{/with}} {{/each}}
        </div>
      </section>
    </main>
  </body>
  <script src="bootstrap/dist/js/bootstrap.min.js"></script>
</html>
